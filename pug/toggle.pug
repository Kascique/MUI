- var title = 'Toggle'
- var css = 'toggle'
doctype
html(lang='en')
  head
    include /includes/head.pug
      body
          h3= title
          - var colors = ['red', 'pink', 'purple', 'blue', 'cyan', 'teal', 'green', 'yellow', 'amber', 'orange'];
          each color in colors
            label(class='switch '+color)
              input(type='checkbox')
              span #{color}
