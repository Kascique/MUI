- var title = 'Toggle'
- var css = 'toggle'
doctype
html(lang='en')
  head
    include /includes/head.pug
      body
          h3= title
          - var colors = ['basic', 'earth', 'night', 'ocean', 'red', 'yellow', 'pink'];
          each color in colors
            label(class='switch '+color)
              input(type='checkbox')
              span #{color}
