- var title = 'Checkbox'
- var css = 'checkbox'
doctype
html(lang='en')
  head
    include /includes/head.pug
      body
          h3= title
          - var colors = ['white', 'red', 'pink', 'purple', 'indigo', 'blue', 'cyan', 'teal', 'green', 'lime', 'yellow', 'amber', 'orange', 'brown', 'grey', 'blue-grey'];
          each color in colors
            label(class='checkbox '+color)
              input(type='checkbox')
              span #{color}
