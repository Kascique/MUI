{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
	"rules": {
		"quotes": [1, "double", {
			"allowTemplateLiterals": true
			}
		],
		"no-multiple-empty-lines": 1,
		"comma-spacing": 2,
		"semi-style": 2,
		"no-multi-spaces": 1,
		"space-infix-ops": 1,
		"no-shadow": 2,
		"capitalized-comments": 1,
		"comma-dangle": 1,
		"one-var": 1,
		"one-var-declaration-per-line": 1,
		"no-var": 2,
		"no-unused-vars": 0,
		"no-undef": 0,
		"func-call-spacing": 1,
		"arrow-parens": 1,
		"key-spacing": 1,
		"keyword-spacing": 1,
		"arrow-spacing": 1,
		"no-useless-rename": 2,
		"no-trailing-spaces": 1,
		"no-new-symbol": 2,
		"no-duplicate-imports": 2,
		"no-confusing-arrow": 1,
		"no-inline-comments": 1,
		"no-whitespace-before-property": 2,
		"semi-spacing": 1,
		"space-before-blocks": 1,
		"template-tag-spacing": 1,
		"object-curly-spacing": 1,
		"no-mixed-spaces-and-tabs": 1,
		"no-tabs": 1,
		"yoda": 2,
		"brace-style": 2,
		"semi": 2
	}
}
